<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#fff"
    android:layout_height="match_parent"
    tools:context=".PersonalActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:layout_width="200dp"
            android:id="@+id/personalImage"
            app:civ_border_color="#0F4E6B"
            app:civ_shadow="true"
            app:civ_shadow_gravity="bottom"
            app:civ_shadow_radius="5"
            app:civ_shadow_color="#4E4D4D"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:src="@drawable/profile"
            />
        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/personalFullName"
            android:text="FullName"
            android:textColor="#000"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_below="@id/personalDob"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/personalUserName"
            android:textAlignment="center"
            android:text="UserName"
            android:textColor="#000"
            android:layout_below="@id/personalFullName"
            android:layout_marginTop="5dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/personalRelation"
            android:textColor="#000"
            android:layout_below="@id/personalcountry"
            android:textAlignment="center"
            android:text="RelationShipStatus"

            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Country"
            android:textAlignment="center"
            android:textColor="#000"
            android:id="@+id/personalcountry"
            android:layout_below="@id/personalgender"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gender"
            android:id="@+id/personalgender"
            android:textAlignment="center"
            android:textColor="#000"
            android:layout_below="@id/personalProfileStatus"
            android:layout_marginTop="150dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/personalProfileStatus"
            android:textAlignment="center"
            android:textColor="#000"
            android:layout_below="@id/personalUserName"
            android:hint=" Your Profile Status here"
            android:textColorHint="#000"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/personalDob"
            android:layout_below="@id/personalImage"
            android:textAlignment="center"
            android:text="Date Of Birth"
            android:textColor="#000"
            />


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#105B85"
            android:layout_below="@id/personalRelation"
            android:layout_marginTop="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            android:text="Send Friend Request"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:id="@+id/sendfriend"

            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#105B85"
            android:layout_below="@id/sendfriend"
            android:layout_marginTop="5dp"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            android:text="Decline Friend Request"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:id="@+id/declinfriend"

            />


    </RelativeLayout>

    </ScrollView>

</RelativeLayout>