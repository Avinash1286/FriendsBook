<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/register"
    android:layout_height="match_parent"
    tools:context=".ForgetPassword">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Please Enter a valid email here\nWe will send you a link to your email address where you can click to reset your password"
        android:textAlignment="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textColor="#000"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginTop="50dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/backinput"
        android:padding="20dp"
        android:layout_centerInParent="true"
        android:hint="Enter your email..."
        android:layout_margin="20dp"
        android:textColorHint="#000"
        android:id="@+id/sendemail"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/reset"
        android:layout_below="@id/sendemail"
        android:layout_margin="30dp"
        android:background="@drawable/backlog"
        android:text="Send Link"
        android:textColor="#000"
        android:textAllCaps="false"
        android:textSize="20sp"
        />


</RelativeLayout>