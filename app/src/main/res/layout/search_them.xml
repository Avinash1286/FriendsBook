<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:background="#fff"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<com.mikhaellopez.circularimageview.CircularImageView
    android:layout_width="60dp"
    android:layout_height="60dp"
    app:civ_border="true"
    app:civ_shadow_radius="5"
    app:civ_shadow_gravity="bottom"
    app:civ_border_color="#20607E"
    android:id="@+id/searchImage"
    android:src="@drawable/profile"
    android:layout_margin="10dp"
    />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:layout_marginTop="15dp"
        android:text="Username"
        android:textStyle="bold"
        android:textColor="#000"
        android:textSize="18dp"
        android:id="@+id/searchusername"
        android:layout_toEndOf="@id/searchImage"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/searchImage"
        android:layout_below="@id/searchusername"
       android:text="Profile Status..."
        android:textSize="15dp"
        android:textColor="#616161"
        android:id="@+id/searchStatus"
        android:maxLines="1"
        android:ellipsize="end"
        />
    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/userStateIcon"
        android:layout_marginEnd="20dp"
        android:src="@drawable/online"
        android:visibility="invisible"
        />
</RelativeLayout>