<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login"
    tools:context=".LogIn">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:id="@+id/logo"
        />

    <EditText
        android:id="@+id/logemailText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_below="@id/logo"
        android:background="@drawable/backinput"
        android:padding="5dp"
        android:textColorHint="#A09C9C"
        android:hint="Email"
        android:layout_margin="10dp"
        android:drawableLeft="@drawable/email"
        android:textColor="#000"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/logpassText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_below="@id/logemailText"
        android:background="@drawable/backinput"
        android:padding="5dp"
        android:textColorHint="#949191"
        android:hint="Password..."
        android:layout_margin="10dp"
        android:drawableLeft="@drawable/password"
        android:textColor="#000"
        android:inputType="textEmailAddress" />


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/logpassText"
        android:layout_marginTop="50dp"
        android:background="@drawable/backlog"
        android:text="LogIn"
        android:textSize="20dp"
        android:id="@+id/login"
        android:textAllCaps="false"
        android:layout_margin="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/orlog"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/creatnewaccount"
        android:layout_marginTop="5dp"
        android:text="or login with"
        android:textColor="#000"
        android:textSize="20dp"
        />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/logContainer"
    android:orientation="horizontal"
    android:layout_below="@id/orlog"
    android:layout_marginTop="20dp"
    >

    <ImageView
        android:id="@+id/loginfacebook"
        android:layout_width="129dp"
        android:layout_height="50dp"
        android:src="@drawable/facebook" />

    <ImageView
        android:id="@+id/logintwiter"
        android:layout_width="183dp"
        android:layout_height="50dp"
        android:src="@drawable/twitter" />

    <ImageView
        android:id="@+id/logingoogle"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignEnd="@+id/logContainer"
        android:src="@drawable/google" />



</LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/creatnewaccount"
        android:layout_below="@id/login"
        android:textSize="25dp"
        android:textAlignment="center"
        android:padding="10dp"
        android:text="I don't have an account"
       android:fontFamily="sans-serif"
        android:textColor="#08324E"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/logContainer"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:textSize="20sp"
        android:text="ForgetPassword "
        android:textStyle="bold"
        android:textColor="#000"
        android:id="@+id/forget"

        />
</RelativeLayout>

</ScrollView>