<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F4F4"
    tools:context=".ProfileActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

<com.mikhaellopez.circularimageview.CircularImageView
    android:layout_width="200dp"
    android:id="@+id/proImage"
    app:civ_border_color="#0F4E6B"
    app:civ_shadow="true"
    app:civ_shadow_gravity="bottom"
    app:civ_shadow_radius="5"
    app:civ_shadow_color="#4E4D4D"
    android:layout_height="200dp"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="50dp"
    android:src="@drawable/profile"
    />
        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/proname"
            android:text="FullName"
            android:textColor="#000"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_below="@id/proDob"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/prousername"
            android:textAlignment="center"
            android:text="UserName"
            android:textColor="#000"
            android:layout_below="@id/proname"
            android:layout_marginTop="5dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/proRelation"
            android:textColor="#000"
            android:textAlignment="center"
            android:text="RelationShipStatus"
            android:layout_below="@id/procountry"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Country"
            android:textAlignment="center"
            android:textColor="#000"
            android:id="@+id/procountry"
           android:layout_below="@id/progender"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gender"
            android:id="@+id/progender"
            android:textAlignment="center"
            android:textColor="#000"
            android:layout_below="@id/prousername"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/proStatus"
            android:textAlignment="center"
            android:textColor="#000"
            android:layout_below="@id/proRelation"
            android:hint=" Your Profile Status here"
            android:textColorHint="#000"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/proDob"
            android:layout_below="@id/proImage"
            android:textAlignment="center"
            android:text="Date Of Birth"
            android:textColor="#000"
            />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:weightSum="2"
        android:orientation="horizontal"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/noOfPost"
            android:background="#4CAF50"
            android:text="No of post"
            android:layout_margin="10dp"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="no of friends"
            android:id="@+id/noOfFriends"
            android:background="#4CAF50"
            android:layout_margin="10dp"
            />



    </LinearLayout>

</RelativeLayout>